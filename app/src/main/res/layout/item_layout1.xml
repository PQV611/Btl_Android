<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="*"> <!-- Use * to make all columns share the width equally -->

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="50dp"> <!-- Set a fixed height for the TableRow -->

                <TextView
                    android:id="@+id/tv_msvphancong"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:background="@drawable/cell_border"
                    android:layout_gravity="center_vertical"/> <!-- Apply the border background here -->

                <TextView
                    android:id="@+id/tv_tenphancong"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textAlignment="center"
                    android:background="@drawable/cell_border"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tv_notephancong"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textAlignment="center"
                    android:background="@drawable/cell_border"
                    android:layout_gravity="center_vertical"/>
            </TableRow>
        </TableLayout>
    </HorizontalScrollView>
</TableLayout>
