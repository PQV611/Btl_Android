<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Báo cáo và thống kê phòng học"
        android:layout_marginBottom="30dp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="*">
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#cccccc"
                    android:padding="8dp"
                    android:text="Mã sinh viên"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Tên"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:background="#cccccc"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Trực nhật"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:background="#cccccc"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Ca"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:background="#cccccc"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Ngày"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:background="#cccccc"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Lớp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:background="#cccccc"
                    android:textAlignment="center"/>
            </TableRow>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tbthongke1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:background="#cccccc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thiết bị hư hại"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:background="#cccccc" />

                <!-- Thêm các tiêu đề cột khác nếu cần -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thiết bị thiếu"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:background="#cccccc" />

            </TableRow>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tbthongke2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableLayout>
    </HorizontalScrollView>



</LinearLayout>