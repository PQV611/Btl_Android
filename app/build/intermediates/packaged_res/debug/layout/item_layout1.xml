<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="*">
    <TableRow
        android:layout_width="wrap_content"> <!-- Set a fixed height for the TableRow -->

        <TextView
            android:id="@+id/tv_msvphancong"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:background="@drawable/cell_border"/>

        <TextView
            android:id="@+id/tv_tenphancong"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@drawable/cell_border"/>
        <TextView
            android:id="@+id/tv_notephancong"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@drawable/cell_border"/>
        <TextView
            android:id="@+id/tv_caphancong"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@drawable/cell_border"/>
        <TextView
            android:id="@+id/tv_ngayphancong"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@drawable/cell_border"/>
        <TextView
            android:id="@+id/tv_lopphancong"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@drawable/cell_border"/>
    </TableRow>
</TableLayout>
